<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="100" d:DesignHeight="100"
        CanResize="False"
        SizeToContent="Height"
        Width="250" Height="100" 
        x:Class="NewWordLearner.Views.official.Notify"
        Title="Notify">
        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="1*" MinHeight="50"/>
                        <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
        
                <TextBlock Name="text" Text="" Margin="10,10,10,0" Grid.Row="0" FontSize="20" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                <Button Name="ok" Margin="10,0,10,10" Width="50" HorizontalAlignment="Center" Grid.Row="1">Ok</Button>
        </Grid>
</Window>
